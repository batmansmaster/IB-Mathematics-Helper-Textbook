\newcommand{\makeboxtype}[4][]{% box environment creation command
    \newtcolorbox[auto counter, number within=section]{#2}[2][]{
        colback = #4!15,
        colframe = #4,
        colbacktitle = #4!50,
        title = {##2},
        before title = {#3},
        #1,
        ##1
    }
}

